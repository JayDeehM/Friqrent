<h1>Editing Rent</h1>

 <div class="cart-<%= @cart.equipment.id  %>">
                      <%= form_for(@cart) do |f| %>
                        <% if @cart.errors.any? %>
                          <div id="error_explanation">
                            <h2><%= pluralize(@cart.errors.count, "error") %> prohibited this rent from being saved:</h2>
                      
                            <ul>
                            <% @cart.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                            <% end %>
                            </ul>
                          </div>
                        <% end %>
                        
                          <%= f.number_field :amount %>
                          <%= f.number_field :total %>
                          <%= f.hidden_field :equipment_id, :value => @cart.equipment.id %>
                          <%= f.submit %>
                      
                      <% end %>

                      <script>
  
                        $('.cart-<%= @cart.equipment.id  %> #cart_amount').change(function(){
                          $('.cart-<%= @cart.equipment.id  %> #cart_total').val(parseInt($('.cart-<%= @cart.equipment.id  %> #cart_amount').val()) * parseInt(<%= @cart.equipment.rent_price %>));
                        });
                        
                      </script>
